<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Dashboard">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TableLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0,1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:background="#ffffff">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_margin="2dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="Units used"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_margin="2dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="present bill"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff" />


            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="#ffffff">


                <TextView
                    android:id="@+id/KilloWatts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_margin="2dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="-- --"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff" />


                <TextView
                    android:id="@+id/bill2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_margin="2dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="-- --"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff" />


            </TableRow>



            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:background="#ffffff">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_margin="2dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="live Watts"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_margin="2dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="Active Hrs"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff" />


            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="#ffffff">


                <TextView
                    android:id="@+id/Watts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_margin="2dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="-- --"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff" />


                <TextView
                    android:id="@+id/hours"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_margin="2dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="-- --"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff" />


            </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_margin="2dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text=" voltage"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_margin="2dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text=" current"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff" />


            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/Volts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_margin="2dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="-- --"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/Amps"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_margin="2dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="-- --"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff" />


            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_margin="2dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="Estimated bill"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_margin="2dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="pulses"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/estmbill"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_margin="2dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="-- --"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff" />


                <TextView
                    android:id="@+id/Pulse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_margin="2dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="-- --"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/bill1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_margin="2dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="-- --"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/prevv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_margin="2dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="-- --"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff" />

            </TableRow>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#0a520a"
                android:stretchColumns="0,1,2,3">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1">


                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/meter1" />

                    <ImageView
                        android:id="@+id/sign_out_button"
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/profile1" />

                    <ImageView
                        android:id="@+id/settings"
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_column="2"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/info1" />


                </TableRow>

            </TableLayout>
        </TableLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.drawerlayout.widget.DrawerLayout>